<?xml version="1.0" encoding="UTF-8"?>
<code-table>
    <name>publication-status-codes</name>
    <description>This code table stores FRUS publication status types.</description>
    <items>
        <item>
            <label>Planned</label>
            <value>planned</value>
            <hint>Has been registered in a sub-series plan</hint>
        </item>
        <item>
            <label>Being Researched</label>
            <value>being-researched</value>
            <hint>Research has begun</hint>
        </item>
        <item>
            <label>Being Cleared</label>
            <value>being-cleared</value>
            <hint>Editing and declassification has begun</hint>
        </item>
        <item>
            <label>Published</label>
            <value>published</value>
            <hint>Has been published</hint>
        </item>
        <item>
            <label>Partially Published</label>
            <value>partially-published</value>
            <hint>Some but not yet all chapters in a volume have been published</hint>
        </item>
    </items>
</code-table>
